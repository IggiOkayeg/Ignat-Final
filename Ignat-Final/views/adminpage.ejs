              <input type="text" id="portfolioName" name="portfolioName" required>
              <button type="submit">Delete Object </button>
          </form>
      
          <h1>Update Object </h1>
          <form id="updatePortfolioForm">
              <label for="portfolioName">Object  Name:</label>
              <input type="text" id="portfolioName" name="portfolioName" required><br>
              <label for="newName">New Name:</label>
              <input type="text" id="newName" name="newName" required><br>
              <label for="newBody">New Body:</label>
              <textarea id="newBody" name="newBody" rows="4" required></textarea><br>
